 vect = [1,0.0,0,0,0];	
}


cout << vect << endl;



real[int] far = farea(vect); // compute area and gradient
real arr = far(0);
vect = sqrt(areatarget/arr)*vect;

real[int] ggg = f(vect);
real[int] gradt = ggg(1:ggg.n-1); 

gradt = gradt;
// optimization loop

real[int] vals;
//vals = [];

int i = 0;

real tol=1e-4;
while(i<niter){
	i=i+1;
	if(i%50==0){alpha = 0.5*alpha;}
	real[int] tvect = vect+alpha*gradt;
	real[int] far = farea(tvect);
