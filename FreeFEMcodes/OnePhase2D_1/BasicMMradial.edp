	real[int] tgradt = ggg(1:ggg.n-1); 
   vals = [vals,val];
   vect   = tvect;
   gradt  = tgradt;
   real[int] dis = 1:vals.n;
   plot([dis,vals],cmm="Iteration "+i);
}

saving = 1;
